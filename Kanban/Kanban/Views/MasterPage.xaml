             xmlns:views="clr-namespace:Kanban.Views"
             x:Class="Kanban.Views.MasterPage">

    <MasterDetailPage.Master>
        <views:MenuPage Title="Menu"></views:MenuPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage x:Name="Navigator">
            <x:Arguments>
                <views:MainPage Title="Kanban">                  
                </views:MainPage>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>